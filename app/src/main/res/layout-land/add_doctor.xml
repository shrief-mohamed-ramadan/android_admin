<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:inputType="textPersonName"
        android:hint="Name"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="5dp"
        style="@style/edittext_style"/>

    <EditText
        android:id="@+id/mobile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="15dp"
        android:inputType="textPersonName"
        android:hint="Mobile"
        android:drawableLeft="@drawable/mobile"
        android:drawablePadding="5dp"
        style="@style/edittext_style"/>

    <EditText
        android:id="@+id/sponsor"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mobile"
        android:layout_below="@+id/mobile"
        android:layout_marginTop="15dp"
        android:inputType="textPersonName"
        android:hint="Sponsor"
        style="@style/edittext_style"/>

    <EditText
        android:id="@+id/mail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/sponsor"
        android:layout_alignStart="@+id/sponsor"
        android:hint="example@gmail.com"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="5dp"
        style="@style/edittext_style"/>

    <Button
        android:id="@+id/add_doc_bt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="add"
        style="@style/button_style"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/add_doc_print_bt"
        android:layout_marginEnd="14dp" />

    <Button
        android:id="@+id/add_doc_print_bt"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="add print"
        style="@style/button_style"
        android:layout_marginEnd="82dp"
        android:layout_alignBaseline="@+id/add_doc_bt"
        android:layout_alignBottom="@+id/add_doc_bt"
        android:layout_alignParentEnd="true" />
</RelativeLayout>